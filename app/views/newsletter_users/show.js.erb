var message = I18n.t('newsletter.subscribe_success', { email: "<%= @newsletter_user.email %>" })

$('#newsletter_user_email').val('');
$('#feedback').find('span.success').html(message)
$('#feedback').removeClass('hide').fadeIn();

setTimeout(function() {
  $('#feedback span.success').html('');
  $('#feedback').fadeOut();
}, 5000 );
