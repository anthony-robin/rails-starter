f.inputs title, for: [:location, f.object.location || Location.new] do |item|
  item.input :address
  item.input :city
  item.input :postcode

  if full
    item.input :geocode_address,
               hint: t('form.hint.location.geocode_address'),
               input_html: { id: 'gmaps-input-address' }

    item.input :latitude,
               label: false,
               input_html: { id: 'gmaps-output-latitude', class: 'hide' }
    item.input :longitude,
               label: false,
               input_html: { id: 'gmaps-output-longitude', class: 'hide' }
  end
end