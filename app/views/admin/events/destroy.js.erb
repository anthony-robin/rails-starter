// Variables
$post = $("#event-<%= resource.id %>");
$parent = $post.parent();
index = $('.posts.index').length > 0 ? true : false

// SlideUp destroyed article
$parent.slideUp(300, function() {
  if(index) {
    $parent.remove();
    reload_masonry();
  } else {
    Turbolinks.visit("<%= events_path(locale: @language) %>");
  }
});
