h3 resource.title
columns do
  column do
    panel t('active_admin.details', model: active_admin_config.resource_label) do
      attributes_table_for resource do
        row :content
        row :status
        row :show_as_gallery_d
        row :prev_next_d
        row :image
        row :author_with_avatar
      end
    end
  end

  column do
    render 'admin/shared/referencement/show', referencement: resource.referencement
  end
end

columns do
  column do
    render 'admin/shared/pictures/show', resource: resource
  end

  column do
    render 'admin/shared/videos/show', video_platforms: resource.video_platforms, video_uploads: resource.video_uploads
  end if video_module.enabled?
end