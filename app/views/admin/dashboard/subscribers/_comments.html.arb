panel.panel t('activerecord.models.comment.other') do
  panel.table_for CommentDecorator.decorate_collection(query) do |p|
    if query.empty?
      p.span t('post.no_results', category: t('activerecord.models.comment.one'))
    else
      p.column :link_source
      p.column :message
      p.column :lang
      p.column :created_at
      p.column('Actions') do |comment|
        comment.delete_link_source
      end
    end
  end
end