- if @comment_module.enabled?
  section.row
    .small-12.medium-8.medium-centered.columns

      article.post-article
        = render 'posts/microdatas', resource: @commentable.decorate

        header
          h3
            - link = @commentable.decorate.show_page_link
            = link_to @commentable.decorate.title, link
            small<: em
              = "(#{@commentable.decorate.created_at})"

        div == @commentable.decorate.content

      p.text-right
        = link_to I18n.t('link.back_to_article', article: @commentable.title), link


  section.row
    .small-12.medium-9.medium-centered.columns
      - if @commentable.allow_comments?
        .comments-container
          .comments
            = nested_messages @comment.ancestors.arrange(order: :created_at)

          = render 'comments/form'
