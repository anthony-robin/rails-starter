$("#comment-<%= @comment.id %>").slideUp();
<% unless @comment_children.empty? %>
  <% @comment_children.each do |comment_child_id| %>
    $("#comment-<%= comment_child_id %>").slideUp();
  <% end %>
<% end %>

if ($('.comment-count').length > 0){
  $('.comment-count').html("<%= @commentable.comments.validated.by_locale(@language).count %>")
}