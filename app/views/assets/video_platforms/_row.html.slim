- video_info = VideoInfo.new(video.url)
- if video_info.available?
  .small-12.columns
    figure.post__video__figure.flex-video.widescreen
      == video_info.embed_code

      figcaption: div
        - if video.title? && !video.native_informations?
          h3.post__video__title = video.title
        - elsif video.native_informations?
          h3.post__video__title = video_info.title

        == video.description if video.description? && !video.native_informations?
        == auto_link(video_info.description, html: { target: '_blank' }) if video.native_informations?
