header.l-header-site.hide-for-print

  .l-header-container
    = render 'elements/language'

    .row
      .small-12.medium-4.columns
        = render 'elements/logo', show_metadata: true

      .small-12.medium-8.columns
        .row
          .small-12.medium-6.medium-offset-6.columns
            = render 'searches/form' if @search_module.enabled?

          .small-12.columns
            = render 'elements/menu'


    = breadcrumbs pretext: t('breadcrumb.here'), separator: '', style: :ol, semantic: true if @breadcrumb_module.enabled? && setting.show_breadcrumb?
