- if @video_module.enabled?
  - if @video_settings.video_platform?
    .row
      - VideoPlatformDecorator.decorate_collection(resource.video_platforms_online).each do |video|
        = render 'video_platforms/row', video: video


  - if @video_settings.video_upload?
    .row
      - VideoUploadDecorator.decorate_collection(resource.video_uploads_online.not_processing.includes(:video_subtitle)).each_with_index do |video, index|
        = render 'video_uploads/row', video: video, index: index
