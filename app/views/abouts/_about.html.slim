article.post.about class="#{params[:action]}"
  = render 'posts/microdatas', resource: about
  = render 'posts/admin_actions', resource: about

  .row
    .small-12.columns
      = render 'posts/pictures/cover', resource: about

      / Header
      / ======
      header.post__header
        h3.post__header__title
          = link_to about.title, about, class: 'post__header__title__link'

      / Body
      / ====
      .post__body
        - if index_page?
          == truncate_read_more(about.content, about_path(about))
        - else
          == about.content

// BackTo link
= render 'posts/back_to', resource: about
